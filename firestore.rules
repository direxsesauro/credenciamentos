rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para coleção de contratos
    // Acesso público para leitura e escrita
    match /contracts/{contractId} {
      allow read, write: if true;
      
      // Validação básica de dados (opcional)
      allow create: if request.resource.data.keys().hasAll([
        'cnpj', 'empresa', 'numero_contrato', 'numero_processo', 
        'objeto', 'valor_global_anul', 'inicio_vigencia'
      ]);
      
      allow update: if request.resource.data.keys().hasAll([
        'cnpj', 'empresa', 'numero_contrato', 'numero_processo', 
        'objeto', 'valor_global_anul', 'inicio_vigencia'
      ]);
    }
    
    // Regras para coleção de pagamentos
    // Acesso público para leitura e escrita
    match /payments/{paymentId} {
      allow read, write: if true;
      
      // Validação básica de dados (opcional)
      allow create: if request.resource.data.keys().hasAll([
        'numero_contrato', 'numero_nf', 'valor_nfe', 
        'mes_competencia', 'ano_competencia'
      ]);
    }
    
    // Regras para coleção de alterações contratuais
    match /contract_amendments/{amendmentId} {
      allow read, write: if true;
      
      // Validação básica de dados
      allow create: if request.resource.data.keys().hasAll([
        'contract_id', 'type', 'amendment_type', 'amendment_date', 
        'is_active', 'justification', 'amended_by'
      ]);
    }
    
    // Regras para coleção de períodos contratuais
    match /contract_periods/{periodId} {
      allow read, write: if true;
      
      // Validação básica de dados
      allow create: if request.resource.data.keys().hasAll([
        'contract_id', 'period_number', 'period_type', 
        'start_date', 'end_date', 'period_status'
      ]);
    }
  }
}
